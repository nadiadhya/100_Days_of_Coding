import java.util.Scanner;

public class TotalGajiKaryawan {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        //Deklarasi variabel
        int jumlahKaryawan, gajiPerkaryawan, totalGaji;
        
        //Input data
        System.out.print("Masukkan jumlah karyawan: ");
        jumlahKaryawan = scanner.nextInt();
        System.out.print("Masukkan gaji per karyawan: ");
        gajiPerkaryawan = scanner.nextInt();
        
        //Menghitung total gaji karyawan
        totalGaji = jumlahKaryawan * gajiPerkaryawan;
        
        //Output data
        System.out.println("Total gaji karyawan adalah : " + totalGaji);
    }
}
