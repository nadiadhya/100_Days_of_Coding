import java.util.Scanner;

public class Logika {

    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        // Deklarasi variabel
        boolean x, y;

        // Input data
        System.out.print("Masukkan nilai x: ");
        x = input.nextBoolean();
        System.out.print("Masukkan nilai y: ");
        y = input.nextBoolean();

        // Logika
        if (x && y) {
            System.out.println("x dan y bernilai benar");
        } else if (x || y) {
            System.out.println("x atau y bernilai benar");
        } else {
            System.out.println("x dan y bernilai salah");
        }
    }
}
