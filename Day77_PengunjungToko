import java.util.Scanner;

public class PengunjungToko {
    public static void main(String[] args) {
        int totalPengunjung = 0;
        Scanner scanner = new Scanner(System.in);

        while (true) {
            System.out.println("Masukkan jumlah pengunjung (0 untuk keluar): ");
            int pengunjungBaru = scanner.nextInt();

            if (pengunjungBaru == 0) {
                break;
            }

            totalPengunjung += pengunjungBaru;
            System.out.println("Jumlah Pengunjung: " + totalPengunjung);
        }

        System.out.println("Program selesai. Jumlah total pengunjung: " + totalPengunjung);
        scanner.close();
    }
}
